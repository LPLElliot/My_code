@model IEnumerable<PartyApp.Models.Guest>

@{
    ViewData["Title"] = "用户聚会";
}

<h1>用户聚会列表</h1>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var guest in Model)
        {
            <li>@guest.Party.Title - @guest.Party.Location</li>
        }
    </ul>
}
else
{
    <p>该用户未注册任何聚会。</p>
}

<a asp-action="Index" asp-controller="Home">返回聚会列表</a>